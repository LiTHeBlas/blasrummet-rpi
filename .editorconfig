# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
line_length=79
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
# https://github.com/timothycrosley/isort/wiki/isort-Settings
known_first_party=door
multi_line_output=3
default_section=THIRDPARTY

[*.js]
indent_style = space
indent_size = 2
continuation_indent_size = 2

[*.html]
indent_style = space
indent_size = 2
continuation_indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
